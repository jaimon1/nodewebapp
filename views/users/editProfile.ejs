    <%-include("../../views/parsuals/user/header")%>
        <!-- Page Header -->
        <div class="page-header fade-in">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="text-white">Home</a></li>
                        <li class="breadcrumb-item"><a href="#" class="text-white">Profile</a></li>
                        <li class="breadcrumb-item active text-white-50">Edit Profile</li>
                    </ol>
                </nav>
                <h1 class="mb-0">Edit Profile</h1>
                <p class="mb-0 opacity-75">Update your personal information</p>
            </div>
        </div>

        <div class="container">
            <!-- Alert Messages -->
            <div id="alertContainer"></div>

            <div class="row">
                <!-- Profile Picture Section -->
                <div class="col-lg-4">
                    <div class="profile-card text-center slide-in">
                        <h5><i class="fas fa-camera me-2"></i>Profile Picture</h5>
                        <div class="profile-image-container mb-3">
                            <img src="https://via.placeholder.com/150x150/4f7cff/ffffff?text=JM" alt="Profile"
