                    </div>

                    <!-- Quick Stats -->
                    <div class="profile-card slide-in">
                        <h5><i class="fas fa-chart-bar me-2"></i>Account Stats</h5>
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="mb-2">
                                    <div class="h4 text-primary mb-0">12</div>
                                    <small class="text-muted">Orders</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-2">
                                    <div class="h4 text-primary mb-0">9</div>
                                    <small class="text-muted">Reviews</small>
                                </div>
                            </div>
