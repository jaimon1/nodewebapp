            function confirmCancelOrder() {
                const reason = document.getElementById('cancelReason').value;

                if (!reason) {
                    showAlert('Please select a reason for cancellation', 'danger');
                    return;
                }

                // Close modal
                bootstrap.Modal.getInstance(document.getElementById('cancelOrderModal')).hide();

                // Update order status in UI
                const orderElements = document.querySelectorAll('.order-item');
                orderElements.forEach(orderElement => {
                    const orderIdElement = orderElement.querySelector('.text-muted');
                    if (orderIdElement && orderIdElement.textContent.includes(currentCancelOrderId)) {
                        const statusBadge = orderElement.querySelector('.status-badge');
                        statusBadge.className = 'status-badge status-cancelled';
                        statusBadge.textContent = 'Cancelled';

                        const actionButton = orderElement.querySelector('.btn-outline-danger');
                        if (actionButton) {
                            actionButton.style.display = 'none';
                        }
                    }
                });

                showAlert(`Order ${currentCancelOrderId} has been cancelled successfully.`, 'success');

                // Clear form
                document.getElementById('cancelReason').value = '';
                currentCancelOrderId = null;
            }

            // Alert system
            function showAlert(message, type) {
                // Remove existing alerts
                const existingAlert = document.querySelector('.alert');
                if (existingAlert) {
                    existingAlert.remove();
                }

                const alertHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${getAlertIcon(type)} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

                // Insert alert at the top of the container
                const container = document.querySelector('.container');
                container.insertAdjacentHTML('afterbegin', alertHTML);

                // Auto-dismiss after 5 seconds
                setTimeout(() => {
                    const alert = document.querySelector('.alert');
                    if (alert) {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 5000);
            }

            function getAlertIcon(type) {
                switch (type) {
                    case 'success': return 'check-circle';
                    case 'danger': return 'exclamation-triangle';
                    case 'warning': return 'exclamation-circle';
                    case 'info': return 'info-circle';
                    default: return 'info-circle';
                }
            }

