<%-include("../../views/parsuals/admin/header")%>

    <!-- Main Content -->
    <div class="col-md-10 p-0">
        <div class="topbar d-flex justify-content-between align-items-center">
            <a href="/admin/addCategory" class="btn btn-primary">Add Category</a>
            <h4 class="m-0">Category Management</h4>
            <form action="/admin/users" method="GET" class="d-flex w-25">
                <input type="text" name="search" class="form-control me-2" placeholder="Search Users...">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        <div class="p-4">
            <!-- Category Listing -->
            <div class="card p-3 mb-4">
                <h5>Category List</h5>
                <div class="table-responsive mt-3">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Sl No</th>
                                <th>Name</th>
                                <th>Slug</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i< cat.length;i++) { %>
                                <tr>
                                    <td>
                                        <%= i + 1%>
                                    </td>
                                    <td>
                                        <%= cat[i].name %>
                                    </td>
                                    <td>
                                        <%= cat[i].slug %>
                                    </td>
                                    <td>
                                        <%= cat[i].description %>
                                    </td>
                                    <% if(cat[i].isListed===true) { %>
                                        <td><a class="text-decoration-none btn btn-sm btn-success"
                                                href="/admin/List?id=<%=cat[i]._id%>">listed</a></td>
                                        <% } else { %>
                                            <td><a class="text-decoration-none btn btn-sm btn-danger"
                                                    href="/admin/unList?id=<%=cat[i]._id%>">unlisted</a></td>

                                            <% } %>
                                                <td>
                                                    <button class="btn btn-sm btn-warning"><i
                                                            class="fas fa-edit"></i></button>
                                                    <a href="/admin/deleteCategory?id=<%=cat[i]._id%>"
                                                        class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                                </td>
                                </tr>
                                <% } %>
                                    <!-- Dynamic rows go here -->
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mt-3">
                        <% if(currentPage> 1) {%>
                            <li class="page-item"><a href="?page=<%= currentPage - 1 %>" class="page-link">Previous</a></li>
                            <% } else { %>
                                <li class="page-item disabled"><a class="page-link">Previous</a></li>
                                <% } %>
                                <% for(let i=1;i <= totalPages; i++) {%>
                                    <li class="page-item <%= currentPage == i ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if(currentPage < totalPages) { %>
                                    <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a></li>
                                    <% } else {%>
                                    <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                                        <% } %>
                    </ul>
                </nav>
            </div>


        </div>
    </div>
    </div>
    </div>



    <%-include("../../views/parsuals/admin/footer")%>